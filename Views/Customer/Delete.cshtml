@model RAM_APP.Models.Customer

@{
    ViewData["Title"] = "Deleting customer from system";
}


<main id="main" class="main">
<!-- Card with an image on left -->
          <div class="card mb-3">
            <div class="row g-0">
              <div class="col-md-12">
                <div class="card-body">
                    

                    
<h1>Deleting customer from the system...</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Customer</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
           Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
            @Html.DisplayFor(model => model.MiddleName)
            @Html.DisplayFor(model => model.Surname)
        </dd>
        <dt class = "col-sm-2">
            Phone number
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
        <dt class = "col-sm-2">
            Address
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ZipCodeNavigation.Street),
            @Html.DisplayFor(model => model.ZipCodeNavigation.City),
            @Html.DisplayFor(model => model.ZipCodeNavigation.State).
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Cid" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a  type="button" class="btn btn-primary" asp-action="Index">Back to List</a>
    </form>
</div>



                  </div>
              </div>
            </div>
          </div><!-- End Card with an image on left -->
</main><!-- End #main -->


