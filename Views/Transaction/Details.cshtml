@model RAM_APP.Models.Transaction

@{
    ViewData["Title"] = "Transaction details";
}

<main id="main" class="main">
<!-- Card with an image on left -->
          <div class="card mb-3">
            <div class="row g-0">
              <div class="col-md-12">
                <div class="card-body">
                    

<h4>Transaction details</h4>

<div>
    <h5>
    @Html.DisplayFor(model => model.CustomerNavigation.FirstName)'s @Html.DisplayFor(model => model.DateRented) transaction
    </h5>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Date: 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateRented)
        </dd>
        <dt class = "col-sm-2">
            Full name:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CustomerNavigation.FirstName)
            @Html.DisplayFor(model => model.CustomerNavigation.MiddleName)
            @Html.DisplayFor(model => model.CustomerNavigation.Surname)
            
        </dd>
        <dt class = "col-sm-2">
            Movie:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MovieNavigation.Title)
        </dd>
        <dt class = "col-sm-2">
            Tax:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MovieNavigation.Tax)%
        </dd>
        <dt class = "col-sm-2">
            Price:
        </dt>
        <dd class = "col-sm-10">
            ZMW @Html.DisplayFor(model => model.MovieNavigation.Price)
        </dd>
        <dt class = "col-sm-2">
            Amount paid:
        </dt>
        <dd class = "col-sm-10">
            <b>
                ZMW @Html.DisplayFor(model => model.MovieNavigation.Amount)
            </b>
        </dd>
    </dl>
</div>
<div>
    <a   type="button" class="btn btn-sm btn-danger" asp-action="Edit" asp-route-id="@Model?.Tid">Edit</a>
    <a   type="button" class="btn btn-sm btn-primary" asp-action="Index">Back to list of all transactions</a>
</div>



                  </div>
              </div>
            </div>
          </div><!-- End Card with an image on left -->
</main><!-- End #main -->



